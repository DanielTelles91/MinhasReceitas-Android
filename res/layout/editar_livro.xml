<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#d4d4d4">


    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btExcluir"
        android:text="Título"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:background="#ddfcff"
        android:singleLine="false"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <EditText
        android:id="@+id/etTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:background="#ddfcff"
        android:ems="10"
        android:hint="Título">

        <requestFocus />
    </EditText>


    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingredientes"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:background="#d3ffd6"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/titulo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal" />

    <ScrollView
        android:id="@+id/ScrollView03"
        android:layout_width="fill_parent"
        android:layout_height="60px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_weight="0.37"
        android:background="#d3ffd6">

        <EditText
            android:id="@+id/etIngredientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.43"
            android:background="#d3ffd6"
            android:hint="Ingredientes" />
        />
    </ScrollView>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modo de Preparo"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:background="#ffcef7"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/ScrollView01"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal" />

    <ScrollView
        android:id="@+id/ScrollView04"
        android:layout_width="fill_parent"
        android:layout_height="60px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:layout_weight="0.44"
        android:background="#ffcef7">

        <EditText
            android:id="@+id/etModoDePreparo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.43"
            android:background="#ffcef7"
            android:hint="Modo de Preparo" />
        />
    </ScrollView>

    <Button
        android:id="@+id/btSalvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar" />


</LinearLayout>